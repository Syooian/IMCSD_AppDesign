<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/Button01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 01"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/Button02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button 02"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01"
        android:gravity="center"
        android:text="TextView02" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView01"
        android:text="TextView01"
        android:layout_centerInParent="true"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView03"
        android:text="TextView03"
        android:layout_above="@id/TextView01"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView04"
        android:text="TextView04"
        android:layout_toLeftOf="@id/TextView01"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView05"
        android:text="TextView05"
        android:layout_toRightOf="@id/TextView01"
        android:layout_alignBottom="@id/TextView01"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView06"
        android:text="TextView06"
        android:layout_alignEnd="@id/TextView01"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView07A"
        android:text="TextView07A"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:layout_below="@+id/TextView02"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView07B"
        android:text="TextView07B"
        android:textSize="12dp"
        android:layout_toEndOf="@+id/TextView07A"
        android:layout_alignBaseline="@id/TextView07A"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextView08"
        android:text="TextView08"
        android:textSize="25dp"
        android:layout_below="@+id/TextView07A"/>

    <EditText
        android:id="@+id/EditTextText01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/TextView08"
        android:layout_toEndOf="@id/TextView08"
        android:ems="10"
        android:inputType="text"
        android:text="Name" />

</RelativeLayout>